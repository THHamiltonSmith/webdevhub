        <!-- CSS & JS -->
        <link rel="stylesheet" href="/luna-framework.css" />
        <link rel="stylesheet" href="/style.css" />

        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-LN1VD8C61E"></script>
        <script>
            if (window.location.href.includes("localhost:3000") != true) {
                window.dataLayer = window.dataLayer || [];
                function gtag() {
                    dataLayer.push(arguments);
                }
                gtag("js", new Date());

                gtag("config", "G-LN1VD8C61E");
            }
        </script>
    </head>

    <body>
        <nav class="navbar">
            <input type="image" class="navbar-toggler nav-icons" id="navbar-toggler" src="icons/menu.png" />
            <div class="nav-container">
                <li class="nav-brand">
                    <img class="nav-icons" src="/icons/256x256.jpg" alt="Sky Enterprises Logo" />
                    <a href="/">WebDevHub</a>
                </li>
                <div class="collapsible">
                    <ul class="navbar-ul">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/THHamiltonSmith/webdevhub">GitHub</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.skyenterprisesau.com">Sky Enterprises</a>
                        </li>
                    </ul>
                    <ul class="nav-right navbar-ul">
                        <li class="nav-item search-container">
                            <input type="text" id="search-box" placeholder="Search for a feature...">
                            <button type="submit"><img src="icons/search.png"></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </body>
</html>
